#include "API_debounce.h"


static debounce_t debounceState;
static delay_t delay1;

#define DELAY_TIME 40
#define DELAY_DEFAULT 100


bool_t debounceInit()
{
	debounceState = BUTTON_UP;
	delayInit(&delay1, DELAY_TIME);
	delayInit(&delay1, DELAY_TIME);
	//Configuración del pin que recibe
	/* Para hacerlo después
	GPIO_InitStruct.Pin = PIN;
	GPIO_InitStruct.Mode = GPIO_MODE_INPUT;
	GPIO_InitStruct.Pull = PULL_MODE;
	HAL_GPIO_Init(PORT, &GPIO_InitStruct);
	*/
	return true;
}

void debounceUpdate()
{
	switch(debounceState){
	case BUTTON_UP:
		if(HAL_GPIO_ReadPin(PORTA, GPIO_PIN_1) == 1){
			deleayRead(&delay1);
			debounceState = BUTTON_FALLING;
		}
	break;

	case BUTTON_FALLING:
		if(deleayRead(&delay1)){
			if(HAL_GPIO_ReadPin(PORTA, GPIO_PIN_1) == 1){
				buttonPressed();
				debounceState = BUTTON_DOWN;
				}else{
					debounceState = BUTTON_UP;
			}
		}
	break;
	case BUTTON_DOWN:
		if(HAL_GPIO_ReadPin(PORTA, GPIO_PIN_1) == 0){
					deleayRead(&delay1);
					debounceState = BUTTON_RISING;
				}
	break;
	case BUTTON_RISING:
			if(deleayRead(&delay1)){
				if(HAL_GPIO_ReadPin(PORTA, GPIO_PIN_1) == 0){
					buttonReleased();
					debounceState = BUTTON_UP;
					}else{
						debounceState = BUTTON_DOWN;
				}
			}
	break;
	default:
		if (delayRead(&delay2)){
			HAL_GPIO_TogglePin(PORTA, GPIO_PIN_1);
		}


	} //Fin Switch
}

bool_t buttonPressed()
{
	return true;
}


bool_t buttonReleased()
{
	return true;
}

