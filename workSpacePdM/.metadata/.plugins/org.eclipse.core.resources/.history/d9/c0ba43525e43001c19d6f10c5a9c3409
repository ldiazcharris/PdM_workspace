#include "API_debounce.h"

static debounce_t debounceState;
static delay_t delay;

#define DEALAY_TIME 40


bool_t debounceInit(PORT, PIN, PULL_MODE)
{
	debounceState = BUTTON_UP;
	delayInit(&delay, DELAY_TIME);
	//Configuración del pin que recibe
	GPIO_InitStruct.Pin = PIN;
	GPIO_InitStruct.Mode = GPIO_MODE_INPUT;
	GPIO_InitStruct.Pull = PULL_MODE;
	HAL_GPIO_Init(PORT, &GPIO_InitStruct);
	return true;
}

void debounceUpdate(PORT, PIN)
{
	switch(debounceState){
	case BUTTON_UP:
		if(HAL_GPIO_ReadPin(PORT, PIN)){
			deleayRead(&delay);
			debounceState = BUTTON_FALLING;
		}
	break;

	case BUTTON_FALLING:
		if(deleayRead(&delay)){
			if(HAL_GPIO_ReadPin(PORT, PIN)){
				buttonPressed();
				debounceState = BUTTON_DOWN;
				}else{
					debounceState = BUTTON_UP;
			}
		}
	break;
	case BUTTON_DOWN:
		f(!HAL_GPIO_ReadPin(PORT, PIN)){
					deleayRead(&delay);
					debounceState = BUTTON_RISING;
				}
	break;
	case BUTTON_RISING:
			if(deleayRead(&delay)){
				if(!HAL_GPIO_ReadPin(PORT, PIN)){
					buttonReleased();
					debounceState = BUTTON_UP;
					}else{
						debounceState = BUTTON_DOWN;
				}
			}
	break;
	case defoult:
		HAL_GPIO_TogglePin(PORT, PIN);
	} //Fin Switch
}

