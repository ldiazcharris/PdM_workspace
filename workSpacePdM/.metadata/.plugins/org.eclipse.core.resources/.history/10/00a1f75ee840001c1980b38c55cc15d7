#include "API_delay.h"
#include "stm32f4xx_hal.h"

void delayInit( delay_t* delay, tick_t duration)
{
	if(delay == 0 || duration < 0 || duration > MAX_DELAY)
		while(1);
	delay->duration = duration;
	delay->running = 0;
}
