#include <stdint.h>
#include <stdbool.h>

typedef uint32_t tick_t;
typedef bool bool_t;


typedef struct{
	tick_t startTime;
	tick_t duration;
	bool_t running;
} delay2_t;


void delayInit(delay2_t * delay, tick_t duration);
bool_t delayRead(delay2_t * delay);
void delayWrite(delay2_t * delay, tick_t duration);




